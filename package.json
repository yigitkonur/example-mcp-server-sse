{
  "name": "calculator-learning-demo-mcp",
  "version": "1.0.0",
  "description": "MCP Server - Modern reference implementation using StreamableHTTP transport",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx src/server.ts",
    "clean": "rimraf dist .tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js --port 1923",
    "lint": "eslint .",
    "lint:ci": "eslint . --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run typecheck && npm run lint:ci && npm run format:check",
    "inspector": "npx @modelcontextprotocol/inspector --cli http://localhost:1923/mcp",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,md,css,scss}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "sse",
    "server-sent-events",
    "typescript",
    "best-practices"
  ],
  "author": "Yigit Konur",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yigitkonur/example-mcp-server-sse"
  },
  "bugs": {
    "url": "https://github.com/yigitkonur/example-mcp-server-sse/issues"
  },
  "homepage": "https://github.com/yigitkonur/example-mcp-server-sse#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.3",
    "prettier": "^3.2.4",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3"
  }
}
