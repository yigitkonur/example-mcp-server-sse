{
  "name": "example-mcp-server-streamable-http-v2-starter",
  "version": "2.0.0-alpha.0",
  "description": "MCP v2 pre-alpha Streamable HTTP migration starter, CLI scaffolder, and learning project",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "create-mcp-streamable-starter": "dist/cli/create-mcp-streamable-starter.js",
    "create-mcp-sse-starter": "dist/cli/create-mcp-streamable-starter.js"
  },
  "scripts": {
    "dev": "tsx src/server.ts",
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf dist .tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:ci": "eslint . --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "create": "tsx src/cli/create-mcp-streamable-starter.ts",
    "start": "node dist/server.js",
    "demo:client": "tsx src/demo-client.ts",
    "smoke:server": "node scripts/smoke-server.mjs",
    "check": "npm run typecheck && npm run lint:ci && npm run format:check",
    "ci": "npm run check && npm run build && npm run smoke:server"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "streamable-http",
    "migration",
    "typescript",
    "starter",
    "boilerplate"
  ],
  "author": "Yigit Konur",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yigitkonur/example-mcp-sse"
  },
  "homepage": "https://github.com/yigitkonur/example-mcp-sse#readme",
  "dependencies": {
    "@cfworker/json-schema": "^4.1.1",
    "@modelcontextprotocol/client": "file:vendor/modelcontextprotocol-client-2.0.0-alpha.0.tgz",
    "@modelcontextprotocol/node": "file:vendor/modelcontextprotocol-node-2.0.0-alpha.0.tgz",
    "@modelcontextprotocol/server": "file:vendor/modelcontextprotocol-server-2.0.0-alpha.0.tgz",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^22.18.10",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
