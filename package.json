{
  "name": "calculator-learning-demo-mcp",
  "version": "1.0.0",
  "description": "MCP Server - Modern reference implementation using StreamableHTTP transport",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc --build",
    "build:clean": "tsc --build --clean",
    "dev": "tsx watch src/server.ts -- --port 1923",
    "start": "node dist/server.js --port 1923",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write \"src/**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,json,md}\"",
    "typecheck": "tsc --noEmit",
    "inspector": "npx @modelcontextprotocol/inspector --cli http://localhost:1923/mcp",
    "ci": "npm run lint && npm run typecheck && npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "sse",
    "server-sent-events",
    "typescript",
    "best-practices"
  ],
  "author": "Yigit Konur",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yigitkonur/example-mcp-server-sse"
  },
  "bugs": {
    "url": "https://github.com/yigitkonur/example-mcp-server-sse/issues"
  },
  "homepage": "https://github.com/yigitkonur/example-mcp-server-sse#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3"
  }
}
